{% extends 'adminLayout.html.twig' %}

{% block content %}
    <header class="masthead" style="background-image: url('/src/assets/Public/img/about-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="page-heading">
                        <h1>Validation des commentaires</h1>
                        <span class="subheading"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row gy-4 py-4 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 text-center">
                {% if publishedComment %}
                    <p class="text-success">{{ publishedComment }}</p>
                {% endif %}
                {% if errorPublishComment %}
                    <p class="text-danger">{{ errorPublishComment }}</p>
                {% endif %}
                {% for notPublishedComment in notPublishedComments %}
                    <div class="text-center">
                        <h1>{{ notPublishedComment.pseudo }}</h1>
                        <small class="text-muted fst-italic">Post√© le {{ notPublishedComment.dateComment }}</small>
                        <p>{{ notPublishedComment.content }}</p>
                        <a href="/?action=publishComment&id={{ notPublishedComment.id }}" class="btn btn-outline py-4">Valider le commentaire</a>
                        <hr class="my-4">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}