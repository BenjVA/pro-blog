{% extends 'adminLayout.html.twig' %}

{% block content %}
    <header class="masthead" style="background-image: url('/src/assets/Public/img/about-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="page-heading">
                        <h1>Administration</h1>
                        <span class="subheading"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    {{ dump(notPublishedComments) }}
    {% for notPublishedComment in notPublishedComments %}
        <div>
            <h1>{{ notPublishedComment.pseudo }}</h1>
            <p>{{ notPublishedComment.content }}</p>
        </div>
    {% endfor %}
{% endblock %}