{% extends 'layout.html.twig' %}

{% block content %}
    <header class="masthead" style="background-image: url('/src/assets/Public/img/post-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="post-heading">
                            <h1>Ajouter votre article</h1>
                            <span class="meta"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    {% if waitingValidationArticle %}
        <div class="text-center">
            <p class="text-success">{{ waitingValidationArticle }}</p>
            <a href="/index.php" class="btn btn-outline py-4">Retour à l'accueil</a>
        </div>
    {% endif %}
    {% if notAddedArticle %}
        <div class="text-center">
            <p class="text-danger">{{ notAddedArticle }}</p>
            <a class="btn btn-outline py-4" href="/?action=showAddArticlePage">Revenir à l'ajout d'article</a>
            <a class="btn btn-outline py-4" href="/index.php">Revenir à l'accueil</a>
        </div>
    {% endif %}
    {% if not waitingValidationArticle %}
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <form method="post" action="/?action=addArticle">
                    <div class="form-group">
                        <label for="title" class="form-label">Titre de l'article</label>
                        <input type="text"
                               class="form-control"
                               id="title"
                               name="title"
                               required
                               placeholder="Votre titre ici">
                    </div>
                    <div class="form-group">
                        <label for="short" class="form-label">Chapô</label>
                        <input type="text"
                               class="form-control"
                               id="short"
                               name="short"
                               required
                               placeholder="Entrez votre prénom">
                    </div>
                    <div class="form-group">
                        <label for="article" class="form-label">Contenu de l'article</label>
                        <textarea
                                class="form-control"
                                id="article"
                                name="article"
                                rows="6"
                                required
                                placeholder="Votre article ici"></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}