{% extends 'layout.html.twig' %}

{% block content %}
    <header class="masthead" style="background-image: url('/src/assets/Public/img/post-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="post-heading">
                        <h1>Modifier votre article</h1>
                        <span class="meta"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            {% if editedArticle %}
                <div class="text-center">
                    <p class="text-success">{{ editedArticle }}</p>
                    <a class="btn btn-outline py-4" href="/index.php">Revenir à l'accueil</a>
                </div>
            {% endif %}
            {% if notEditedArticle %}
                <div class="text-center">
                    <p class="text-danger">{{ notEditedArticle }}</p>
                    <a class="btn btn-outline py-4" href="/?action=articles">Revenir à la liste d'articles</a>
                    <a class="btn btn-outline py-4" href="/index.php">Revenir à l'accueil</a>
                </div>
            {% endif %}
            {% if not editedArticle or notEditedArticle %}
                <form method="post" action="/?action=editArticle&id={{ articleToEdit.id }}">
                    <div class="form-group">
                        <label for="title" class="form-label">Titre</label>
                        <textarea
                                class="form-control"
                                id="title"
                                name="title"
                                required>{{ articleToEdit.title }}</textarea>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label for="short" class="form-label">Chapô</label>
                        <textarea
                                class="form-control"
                                id="short"
                                name="short"
                                rows="3"
                                required>{{ articleToEdit.short }}</textarea>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label for="article" class="form-label">Contenu</label>
                        <textarea
                                class="form-control"
                                id="article"
                                name="article"
                                rows="6"
                                required>{{ articleToEdit.content }}</textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">Envoyer</button>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}