{% extends 'header.html.twig' %}

{% block content %}

    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    {% for article in articles %}
                        <h2>{{ article.title }}</h2>
                        <p>{{ article.short }}</p>
                        <a href="?action=article&id={{ article.id }}" class="btn btn-primary">Btn vers single article</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </body>

{% endblock %}